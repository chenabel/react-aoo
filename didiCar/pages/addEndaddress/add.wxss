/* pages/addEndaddress/add.wxss */
.head {
  position: fixed;
  width: 100%;
  height: 30px;
  line-height: 30px;
  background: #fff;
  top: 0;
  left: 0;
}
.logo {
  display: flex;
  align-items: center;
  margin-left: 8px;
}
.logo_img {
  height: 23px;
  width: 23px;
}
.logo_txt {
  line-height: 30px;
  font-size: 17px;
  margin: 0 auto;
  color: #020202;
  font-weight: 580;
}
.content{
  width: 95%;
  margin: 0 auto;
  height: 60px;
  border: 1px solid gainsboro;
  margin-top:20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.search{
  width: 95%;
  margin: 0 auto;
  display: flex;
  align-items: center;
}
.city{
  width: 20%;
  font-size: 40rpx;
  
}
.address{
  width: 80%;
}
.title{
  padding-left:20rpx;
}
.detail{
  padding-left:20rpx;
  font-size: 26rpx;
  color: gainsboro;
}