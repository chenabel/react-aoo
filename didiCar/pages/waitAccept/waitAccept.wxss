/* pages/waitAccept/waitAccept.wxss */
.head {
  position: fixed;
  width: 100%;
  height: 30px;
  line-height: 30px;
  background: #fff;
  top: 0;
  left: 0;
}
.logo {
  display: flex;
  align-items: center;
  margin-left: 8px;
}
.logo_img {
  height: 23px;
  width: 23px;
}
.logo_txt {
  line-height: 30px;
  font-size: 17px;
  margin-left: 10px;
  color: #020202;
  font-weight: 580;
}
map {
  width: 100%; 
  height: 100vh;
}

.driverallInfos {
  position: fixed;
  bottom: 2%;
  width: 97%;
  height: 165px;
  background: white;
  left: 1.4%;
}
.chat{
  position: fixed;
  bottom: 0.5%;
  width: 90%;
  height: 508px;
  background: white;
  left: 5%;
  border-radius: 28rpx;
}
.top ,.footer {
  display: flex;
  justify-content: space-around;
  padding-top: 20px;
  align-items: center;
}
.footer {
  border-top: 1px solid #f4f4f4;
  padding-top: 0;
  margin-top: 20px;
}
.footer > view  {
  display: flex;
  align-items: center;
  border-right: 1px solid #f4f4f4;
  width: 33.33%;
  padding:18px 0;
  justify-content: center;
}
.footer >view:last-child{
  border-right:none;
}
.footer > view image{
  width: 20px;
  height: 20px;
}

.driverimg {
  width: 42px;
  height: 42px;
  border-radius: 50%;
}
.star {
  width: 25px;
  height: 25px;
}
.comment {
  display: flex;
  align-items: center;
  height: 70px;
}
.carInfos {
  color: #adadac;
}
.drlic {
  color: #020202;
  font-weight: 600;
  font-size: 22px;
}
.oredernum {
  margin-left: 5px;
}
.chattext{
  position: absolute;
  bottom: 0px;
  border:1px solid gainsboro;
  height: 200rpx;
  width: 100%;
  display: flex;
  align-items: center;
  border-radius: 28rpx;
}
.chattext>textarea{
  border: none;
  height: 100%;
  width: 600rpx;
}
.chattext>view{
  font-size: 30rpx;
  width: 160rpx;
  height: 30%;
  display: flex;
  align-items: center; 
  justify-content: center;
  background: #adadac;
  color: white;
  border-radius: 30rpx;
}
.logo_img {
  height: 23px;
  width: 23px;
}
.chathead{
  border-radius: 50%;
  width: 25px !important;
  height: 25px !important;
  margin: 0 10px;
}
.uesrhead ,.driverhead{
  margin: 0 8px;
}
.uesrhead>view,.driverhead>view{
  font-size: 12px;
}
.chatcontent{
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-y:scroll;
}
.chatscroll{
  height: 365px;
}
.time{
  font-size: 26rpx;
  color:gainsboro;
}
.userchat{
  width:100%;
  display:flex;
  justify-content:flex-end;
  align-items: center;
}

.driverchat{
  width:100%;
  display:flex;
  justify-content:flex-start;
}
.chat image{
  width: 20px;
  height: 20px;
}
.closeChat {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: grey;
  border-radius: 30rpx 30rpx 0 0;
}
.closeChat>view{
  padding: 0 7px;
  color: white;
  
}
.closeChat>image{
  width: 20px;
  height: 20px;
  padding: 0 7px;
}
.usermsg {
  position: relative;
  max-width: 260px;
  padding: 10px 6px;
  border: 2px solid #ccc;
  border-radius: 5px;
  word-break: break-all;
}

.triangle,
.triangle_two {
  position: absolute;
  top: 15px;
  border-width: 10px;
  border-style: solid;
}

.triangle {
  left: -20px;
  border-color: transparent #ccc transparent transparent;
}

.triangle_two {
  right: -20px;
  border-color: transparent transparent transparent #ccc;
}

.fill,
.fill_two {
  position: absolute;
  top: 15px;
  border-width: 10px;
  border-style: solid;
}

.fill {
  left: -16px;
  border-color: transparent #fff transparent transparent;
}

.fill_two {
  right: -16px;
  border-color: transparent transparent transparent #fff;
}


