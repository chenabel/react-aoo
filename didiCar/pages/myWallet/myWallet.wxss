/* pages/myWallet/myWallet.wxss */
.head {
  position: fixed;
  width: 100%;
  height: 30px;
  line-height: 30px;
  background: #fff;
  top: 0;
  left: 0;
}
.logo {
  display: flex;
  align-items: center;
  margin-left: 8px;
}
.logo_img {
  height: 23px;
  width: 23px;
}
.logo_txt {
  line-height: 30px;
  font-size: 17px;
  margin-left: 10px;
  color: #020202;
  font-weight: 580;
}
.page {
  width: 80%;
  height: 120px;
  padding: 30px 20px;
  border-radius: 18rpx;
  margin: auto;
  color: white;
  background-image: linear-gradient(to right,#5d87e9,#7599f4);
}
.row_one {
  display: flex;
}
.row_one image{
  width: 22px;
  height: 22px;
  margin-left: 10px;
}
.row_two {
  font-size: 32px;
}
.recharge {
  width: 60px;
  height: 30px;
  border-radius: 25rpx;
  text-align: center;
  line-height: 30px;
  background: white;
  color: #5d87e9;
  margin-top: 10px;
}
.money {
  position: fixed;
  bottom: 40%;
  left: 10%;
  width: 80%;
  height: 200px;
  background: white;
  border: 1px solid black;
  border-radius: 22rpx;
}
.money image{
  width: 20px;
  height: 20px;
}
.money view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 3px;
}
.rechargeTit{
  color: black;
  font-size: 18px;
  font-weight: 600;
}
input {
  width: 60%!important;
}
label{
  color: #020202;
  display: flex;
  align-items: center;
  margin-top: 30px;
  margin-left: 6px;
}
.confirmbtn {
  width: 50px;
  height: 30px;
  background: #aaa;
  line-height: 30px;
  border-radius: 22rpx;
  margin: 30px auto;
 
}