/* pages/personalCenter/personalCenter.wxss */
.zhuTi{
  background: #f7f7f7;
  width: 100%;
  position: fixed;
  left: 0rpx;
  bottom: 100rpx;
  overflow:scroll;
}

.userImg{
  width: 700rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row; 
  background: white;
  margin: 0 auto;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx  rgb(65 65 65 / 20%);
}


.userImgBox {
  width: 280rpx;
  height: 100%;
  border-radius: 100rpx;
}

.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 200rpx;  
  color: #fff;  
  display: flex;  
  flex-direction: row;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 110rpx;  
  height: 110rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  margin-left: 60rpx;
  border: 2px solid #fff;  
}  

.userData{
  width: 480rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
}

.userName{
  color: #000000;
  width: 200rpx;
  font-size: 40rpx;
  margin-left: 20rpx;
  margin-top: 130rpx;
  font-weight: 100;
}
.userId{
  color: #a1a1a1;
  width: 200rpx;
  font-size: 40rpx;
  margin-left: 60rpx;
  margin-top: 130rpx;
  font-weight: 100;
  text-align: right;
}

.angel {
  display: flex;
  align-items: center;
  z-index: 10;
  position: absolute;
  top: 200rpx;
  left: 100rpx;
  background: white;
  width: 35rpx;
  height: 35rpx;
  margin-top: -18rpx;
  transform: rotate(45deg);
  position: absolute;
  /* background: #000; */
  z-index: -10;
  }

.fourBtn{
  width: 93%;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  padding-bottom: 40rpx;
}

.fourBtn view{
  width: 140rpx;
  height: 140rpx;
}

.iconfont{
  font-size: 60rpx;
  text-align: center;
  line-height: 140rpx;
  display: flex;
  flex-direction: column;
  /* background: #000; */
  position: relative;
}
.iconText{
  position: absolute;
  font-size: 30rpx;
  top: 60rpx;
  left: 40rpx;
}
.myHistory{
  width: 700rpx;
  height: 400rpx;
  background: white;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx  rgb(65 65 65 / 20%);
  display: flex;
  flex-direction: row;
}
.myFeet{
  width: 700rpx;
  height: 200rpx;
  background: white;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx  rgb(65 65 65 / 20%);
  display: flex;
  flex-direction: row;
  margin-bottom:20rpx;
}
.autoGetOrder{
  width: 700rpx;
  height: 200rpx;
  background: white;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx  rgb(65 65 65 / 20%);
  display: flex;
  flex-direction: column;
  position: relative;
}
.title{
  text-align: center;
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 40rpx;
}

.title view{
  width: 50%;
}
.autoGetOrderBtn{
  width: 100%;
  height: 120rpx;
  border-radius: 80rpx;
  margin-top: 20rpx;
}

.btn{
  width: 50%;
  height: 120rpx;
  border-radius: 80rpx;
  text-align: center;
  line-height: 120rpx;
  position: absolute;
  right: 0rpx;
  box-shadow: 10rpx 10rpx 10rpx  rgb(65 65 65 / 20%);
  background: linear-gradient(to right,#3B4054,#505B78);
  color: white;
  font-size: 35rpx;
}

.serviceBoxTitle{
  width: 20rpx;
  height: 100%;
  margin-left: 20rpx;
  padding-top: 20rpx;
}

.serviceBox{
  width: 640rpx;
