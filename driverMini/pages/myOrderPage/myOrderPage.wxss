/* pages/myOrderPage/myOrderPage.wxss */
.page{
  width: 750rpx;
  position: fixed;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  background: rgb(242,242,242);
}

.zhuTi{
  width: 750rpx;
  position: fixed;
  top: 0rpx;
  bottom: 100rpx;
  left: 0rpx;
}

.msgBox{
  width: 100%;
  margin:0 auto;
  overflow: scroll;
  position: fixed;
  bottom: 100rpx;
  top:0rp;
}

.orderBox{
  width: 96%;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  margin-top: 20rpx;
  border: 2rpx solid #c7c4c4;
  border-radius: 20rpx;
  background: white;
  box-shadow: 10rpx 10rpx 10rpx  rgb(65 65 65 / 10%);
}

.orderBoxHead{
  width: 90%;
  height: 20%;
  display: flex;
  justify-content: space-between;
  margin:0 auto;
  margin-top: 20rpx;
}

.orderBoxHeadLeft{
  width: 49%;
  height: 100%;
}

.orderBoxHeadRight{
  width: 49%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 28rpx;
  align-items: center;
}

.iconleft{
  transform:rotate(180deg);  
}

.orderBoxBody{
  width: 90%;
  height: 80%;
  margin:0 auto;
}

.orderBoxBodyTime{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.begin{
  width: 30rpx;
  height: 30rpx;
  background: rgb(104, 189, 164);
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
}

.end{
  width: 30rpx;
  height: 30rpx;
  background: rgb(240, 149, 103);
  border-radius: 20rpx;
}
